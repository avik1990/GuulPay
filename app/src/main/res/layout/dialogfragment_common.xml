<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_white_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.guulpay.customUiComponents.QuicksandMediumTextview
                android:id="@+id/dialog_header_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Choose a Verification Method"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl_dialog_question">
            <com.guulpay.customUiComponents.QuicksandMediumTextview
                android:id="@+id/dialog_Question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="Do you want to Verify your KYC?"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_15sdp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlradio_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/_10sdp">

            <RadioGroup
                android:id="@+id/rdGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/rbbank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Verification"
                    android:checked="true"
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/rbPasspost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Passport with selfie verification"
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/rbDriving"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driving Licience with selfie verification"
                    android:textColor="@color/colorPrimary" />

                <RadioButton
                    android:id="@+id/rbNationalId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="National Id card with selfie verification"
                    android:textColor="@color/colorPrimary" />

            </RadioGroup>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_5sdp"
            android:background="@drawable/gradient_bottom"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/bottom_layout_LL"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.guulpay.customUiComponents.QuicksandMediumTextview
                android:id="@+id/cancel_TV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_order_history_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:textSize="@dimen/_13sdp" />

            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@color/grey"
                android:visibility="visible" />

            <com.guulpay.customUiComponents.QuicksandMediumTextview
                android:id="@+id/ok_TV"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/selector_order_history_bg"
                android:clickable="true"
                android:focusable="true"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/ok"
                android:textColor="@drawable/selector_text_clor_blue_white"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>